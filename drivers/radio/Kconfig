menuconfig RADIO
	bool "Radio drivers"
	# All platforms that implement the radio driver are now required to
	# provide relevant DTS entries.
	help
	  Enable radio driver configuration.

if RADIO

module = RADIO
module-str = RADIO

config RADIO_INIT_PRIORITY
	int "Radio driver init priority"
	default KERNEL_INIT_PRIORITY_DEVICE
	help
	  This option controls the priority of the radio device
	  initialization. Higher priority ensures that the device is
	  initialized earlier in the startup cycle. If unsure, leave at default
	  value

source "drivers/radio/Kconfig.efr32"

endif
